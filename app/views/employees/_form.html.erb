<div class="form-color">
  <%= form_for [@department, @employee] do |f| %>
    <% if @employee.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

        <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :qualification %><br />
      <%= f.text_field :qualification %>
    </div>
    <div class="field">
      <%= f.label :dateofbirth %><br />
      <%= f.date_select :dateofbirth %>
    </div>
    <div class="field">
      <%= f.fields_for :attachments do |photo| %>
      <%= photo.file_field :photo %>
      <% end %>
    </div> 
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
