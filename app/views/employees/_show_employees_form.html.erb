<div class="row">
	<div class="col-lg-12">
		<% @employees.each do |employee| %>
			<div class="col-lg-3 bg-primary custom-style">
				<p>
					<span><b> Name: </b></span>
					<%= employee.name %>
				</p>
				<p>
					<span><b> Email: </b></span>
					<%= employee.email%>
				</p>
				<p>
					<span><b> Qualification: </b></span>
					<%= employee.qualification %>
				</p>
				<p>
					<span><b> Date of Birth: </b></span>
					<%= employee.dateofbirth %>
				</p>
				<p>
					<%= image_tag employee.attachments.first.photo.url(:medium
					) if employee.attachments.present? %>
				</p>
				<!--<%= link_to 'Destroy', departement_employee_path(employee), method: :delete, :class => "btn btn-danger btn-md", data: { confirm: 'Are you sure?' } %> -->
			</div>
		<% end %>
	</div>
</div>