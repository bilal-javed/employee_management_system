<h1>Listing employees</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Qualification</th>
    <th>Dateofbirth</th>
    <th>Image</th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.name %></td>
    <td><%= employee.email %></td>
    <td><%= employee.qualification %></td>
    <td><%= employee.dateofbirth %></td>
    <td><%= image_tag employee.attachments.first.photo.url(:medium
          ) if employee.attachments.present? %></td>
  </tr>
<% end %>
</table>

